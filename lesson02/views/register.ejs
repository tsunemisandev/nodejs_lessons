<form action="/register" method="post">
  <div class="form-group">
    <label for="userName">Name</label>
    <input type="text" name="userName" class="form-control" id="userName" value="<%=form.userName%>" />
    <% if(form.userNameError) {%>
    <p class="text-danger"><%=form.userNameError%></p>
    <%} %>
  </div>
  <div class="form-group">
    <label for="emailAddress">Email address</label>
    <input
      type="email"
      class="form-control"
      name="emailAddress"
      id="emailAddress"
      aria-describedby="emailHelp"
      value="<%=form.emailAddress%>"
    />
    <% if(form.emailError) {%>
    <p class="text-danger"><%=form.emailError%></p>
    <%} %>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" class="form-control" id="password" value="<%=form.password%>" />
    <% if(form.passError) {%>
    <p class="text-danger"><%=form.passError%></p>
    <%} %>
  </div>
  <div class="form-group">
    <label for="confirmPassword">Confirm password</label>
    <input
      type="password"
      name="confirmPassword"
      class="form-control"
      id="confirmPassword"
      value="<%=form.confirmPassword%>"
    />
    <% if(form.confirmPassError) {%>
    <p class="text-danger"><%=form.confirmPassError%></p>
    <%} %>
  </div>
  <% if(form.passNotMatchError) {%>
  <p class="text-danger"><%=form.passNotMatchError%></p>
  <%} %>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
